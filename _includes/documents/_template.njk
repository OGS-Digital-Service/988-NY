<section class="nysds-documents">
    {% if params.headline %}
        <h2 class="nysds-documents-headline">{{params.headline}}</h2>
    {% endif %}
    {% if params.description %}
        <p class="nysds-documents-description">{{params.description}}</p>
    {% endif %}
        <div class="nysds-documents-container">
            <ul class="nysds-documents-list">
            {% for document in params.documents %}
                <li>
                    <span class="nysds-document-icon"></span>
                    <a class="" href="{{document.link}}">{{document.text}}</a>
                    <span class="nysds-document-download"> Download </span>
                </li>
            {% endfor %}
            </ul>
        </div>
</section>

